<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <form string="Contact Form">
                <group>
                    <!-- res.partner includes common contact information -->
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="city"/>

                    <!-- smart button -->
                    <button name="open_voyage_list" string="Voyages de l'Utilisateur (#{record.voyages_count})" type="object" class="oe_highlight"/>
                </group>
            </form>
        </field>
    </record>
</odoo>